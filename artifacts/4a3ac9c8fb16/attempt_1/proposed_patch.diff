+from __future__ import annotations
+
+from dataclasses import dataclass
+from typing import Any, Dict, Mapping
+
+
+@dataclass(frozen=True)
+class SpecV1:
+    axiom: str
+    rules: Dict[str, str]
+    iterations: int
+    angle_degrees: float
+    step: float
+    width: int
+    height: int
+
+
+_REQUIRED_KEYS = {
+    "axiom",
+    "rules",
+    "iterations",
+    "angle_degrees",
+    "step",
+    "width",
+    "height",
+}
+
+
+def _fail(msg: str) -> None:
+    raise ValueError(msg)
+
+
+def _require_type(name: str, value: Any, typ: type) -> None:
+    if not isinstance(value, typ):
+        _fail(f"{name} must be {typ.__name__}")
+
+
+def parse_spec(obj: Any) -> SpecV1:
+    if not isinstance(obj, Mapping):
+        _fail("spec must be an object")
+
+    keys = set(obj.keys())
+    missing = _REQUIRED_KEYS - keys
+    if missing:
+        _fail(f"missing required keys: {', '.join(sorted(missing))}")
+    unknown = keys - _REQUIRED_KEYS
+    if unknown:
+        _fail(f"unknown keys: {', '.join(sorted(unknown))}")
+
+    axiom = obj["axiom"]
+    _require_type("axiom", axiom, str)
+
+    rules = obj["rules"]
+    if not isinstance(rules, Mapping):
+        _fail("rules must be an object")
+    rules_out: Dict[str, str] = {}
+    for k, v in rules.items():
+        if not isinstance(k, str) or len(k) != 1:
+            _fail("rules keys must be single-character strings")
+        if not isinstance(v, str):
+            _fail("rules values must be strings")
+        rules_out[k] = v
+
+    iterations = obj["iterations"]
+    if not isinstance(iterations, int) or isinstance(iterations, bool):
+        _fail("iterations must be int")
+    if iterations < 0:
+        _fail("iterations must be >= 0")
+
+    angle_degrees = obj["angle_degrees"]
+    if not isinstance(angle_degrees, (int, float)) or isinstance(angle_degrees, bool):
+        _fail("angle_degrees must be a number")
+
+    step = obj["step"]
+    if not isinstance(step, (int, float)) or isinstance(step, bool):
+        _fail("step must be a number")
+    if float(step) <= 0:
+        _fail("step must be > 0")
+
+    width = obj["width"]
+    if not isinstance(width, int) or isinstance(width, bool):
+        _fail("width must be int")
+    if width <= 0:
+        _fail("width must be > 0")
+
+    height = obj["height"]
+    if not isinstance(height, int) or isinstance(height, bool):
+        _fail("height must be int")
+    if height <= 0:
+        _fail("height must be > 0")
+
+    return SpecV1(
+        axiom=axiom,
+        rules=rules_out,
+        iterations=iterations,
+        angle_degrees=float(angle_degrees),
+        step=float(step),
+        width=width,
+        height=height,
+    )
