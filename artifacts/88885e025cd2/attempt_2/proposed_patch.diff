+#!/usr/bin/env bash
+set -euo pipefail
+
+# Frozen global verification entrypoint.
+# Must be runnable from repo root, non-interactive, deterministic.
+
+ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
+cd "$ROOT_DIR"
+
+fail() {
+  printf 'verify: %s\n' "$*" >&2
+  exit 1
+}
+
+run_if_exists() {
+  local cmd="$1"
+  if command -v "$cmd" >/dev/null 2>&1; then
+    "$@"
+    return 0
+  fi
+  return 1
+}
+
+printf 'verify: starting (root=%s)\n' "$ROOT_DIR"
+
+# If the repo defines its own verification via package.json, prefer that.
+if [ -f package.json ] && run_if_exists npm --version >/dev/null 2>&1; then
+  if npm run -s verify >/dev/null 2>&1; then
+    printf 'verify: running npm run -s verify\n'
+    npm run -s verify
+    printf 'verify: ok\n'
+    exit 0
+  fi
+fi
+
+# Fallback: no project-specific checks defined yet.
+# Keep deterministic and non-interactive; succeed with a clear message.
+printf 'verify: no project-specific checks found; nothing to run\n'
+printf 'verify: ok\n'
