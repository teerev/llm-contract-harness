+from dataclasses import dataclass
+
+REQUIRED_KEYS = (
+    "axiom",
+    "rules",
+    "iterations",
+    "angle_degrees",
+    "step",
+    "width",
+    "height",
+)
+
+
+@dataclass(frozen=True)
+class Spec:
+    axiom: str
+    rules: dict
+    iterations: int
+    angle_degrees: float
+    step: float
+    width: int
+    height: int
+
+
+def parse_spec(obj) -> Spec:
+    if not isinstance(obj, dict):
+        raise TypeError("spec must be an object")
+    missing = [k for k in REQUIRED_KEYS if k not in obj]
+    if missing:
+        raise KeyError(f"missing keys: {', '.join(missing)}")
+    unknown = [k for k in obj.keys() if k not in REQUIRED_KEYS]
+    if unknown:
+        raise KeyError(f"unknown keys: {', '.join(unknown)}")
+    if not isinstance(obj["axiom"], str):
+        raise TypeError("axiom must be a string")
+    if not isinstance(obj["rules"], dict):
+        raise TypeError("rules must be an object")
+    return Spec(**{k: obj[k] for k in REQUIRED_KEYS})
