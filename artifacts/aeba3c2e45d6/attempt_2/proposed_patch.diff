+_REQUIRED_KEYS = {
+    "axiom",
+    "rules",
+    "iterations",
+    "angle_degrees",
+    "step",
+    "width",
+    "height",
+}
+
+
+def _is_int_not_bool(x: Any) -> bool:
+    return isinstance(x, int) and not isinstance(x, bool)
+
+
+def _is_number_not_bool(x: Any) -> bool:
+    return isinstance(x, (int, float)) and not isinstance(x, bool)
+
+
+def parse_spec(spec: Dict[str, Any]) -> Spec:
+    if not isinstance(spec, dict):
+        raise TypeError("spec must be a dict")
+
+    missing = _REQUIRED_KEYS - set(spec.keys())
+    if missing:
+        raise KeyError(f"missing required keys: {sorted(missing)}")
+
+    unknown = set(spec.keys()) - _REQUIRED_KEYS
+    if unknown:
+        raise KeyError(f"unknown keys: {sorted(unknown)}")
+
+    axiom = spec["axiom"]
+    rules = spec["rules"]
+    iterations = spec["iterations"]
+    angle_degrees = spec["angle_degrees"]
+    step = spec["step"]
+    width = spec["width"]
+    height = spec["height"]
+
+    if not isinstance(axiom, str):
+        raise TypeError("axiom must be a string")
+    if not isinstance(rules, dict):
+        raise TypeError("rules must be an object")
+    if not _is_int_not_bool(iterations) or iterations < 0:
+        raise TypeError("iterations must be an int >= 0")
+    if not _is_int_not_bool(width) or width <= 0:
+        raise TypeError("width must be an int > 0")
+    if not _is_int_not_bool(height) or height <= 0:
+        raise TypeError("height must be an int > 0")
+    if not _is_number_not_bool(angle_degrees):
+        raise TypeError("angle_degrees must be a number")
+    if not _is_number_not_bool(step) or step <= 0:
+        raise TypeError("step must be a number > 0")
+
+    return Spec(
