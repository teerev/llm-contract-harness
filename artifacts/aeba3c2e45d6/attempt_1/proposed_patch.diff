+_REQUIRED_KEYS = {
+    "axiom",
+    "rules",
+    "iterations",
+    "angle_degrees",
+    "step",
+    "width",
+    "height",
+}
+
+
+def _is_number(x: Any) -> bool:
+    return isinstance(x, (int, float)) and not isinstance(x, bool)
+
+
+def _is_int(x: Any) -> bool:
+    return isinstance(x, int) and not isinstance(x, bool)
+
+
+def parse_spec(spec: Any) -> Spec:
+    if not isinstance(spec, dict):
+        raise TypeError("spec must be a dict")
+
+    missing = [k for k in _REQUIRED_KEYS if k not in spec]
+    if missing:
+        raise KeyError(f"missing required keys: {', '.join(sorted(missing))}")
+
+    unknown = [k for k in spec.keys() if k not in _REQUIRED_KEYS]
+    if unknown:
+        raise KeyError(f"unknown keys: {', '.join(sorted(unknown))}")
+
+    axiom = spec["axiom"]
+    if not isinstance(axiom, str):
+        raise TypeError("axiom must be a string")
+
+    rules = spec["rules"]
+    if not isinstance(rules, dict):
+        raise TypeError("rules must be a dict")
+
+    iterations = spec["iterations"]
+    if not _is_int(iterations) or iterations < 0:
+        raise ValueError("iterations must be an int >= 0")
+
+    width = spec["width"]
+    if not _is_int(width) or width <= 0:
+        raise ValueError("width must be an int > 0")
+
+    height = spec["height"]
+    if not _is_int(height) or height <= 0:
+        raise ValueError("height must be an int > 0")
+
+    angle_degrees = spec["angle_degrees"]
+    if not _is_number(angle_degrees):
+        raise TypeError("angle_degrees must be a number")
+
+    step = spec["step"]
+    if not _is_number(step) or step <= 0:
+        raise ValueError("step must be a number > 0")
+
+    return Spec(
+        axiom=axiom,
+        rules=rules,
+        iterations=iterations,
+        angle_degrees=float(angle_degrees),
+        step=float(step),
+        width=width,
+        height=height,
+    )
